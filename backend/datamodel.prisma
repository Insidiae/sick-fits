type User {
  id: ID! @unique
  name: String!
  email: String!
}

type Item {
  id: ID! @unique
  title: String!
  description: String!
  image: String
  largeImage: String
  price: Int!
  # NOTE: the DateTime type is only available if you're using Prisma (or any other interface that has the DateTyme type)
  createdAt: DateTime!
  updatedAt: DateTime!
  # user: User!
}
